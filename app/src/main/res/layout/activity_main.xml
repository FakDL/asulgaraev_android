<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="16dp"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0">
        <ViewSwitcher
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/my_switcher"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Данил Асулгараев"
                android:textColor="@color/colorWhite"
                />
            <EditText
                android:id="@+id/et_name"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:textSize="15dp"
                android:textColor="@color/colorWhite"/>
        </ViewSwitcher>
    </LinearLayout>




    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:src="@mipmap/ic_profile_pic_round"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlue"
        android:text="Расскажите о себе"
        android:textSize="12dp"
        android:paddingBottom="3dp"
        app:layout_constraintTop_toBottomOf="@id/layout"
        app:layout_constraintLeft_toRightOf="@id/iv_profile"
        app:layout_constraintBottom_toTopOf="@id/tv_status"/>
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="online"
        android:textColor="@color/colorGray"
        app:layout_constraintLeft_toRightOf="@id/iv_profile"
        app:layout_constraintTop_toBottomOf="@id/tv_about"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0"/>

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/button_shape"
        android:textColor="@color/colorWhite"
        android:text="Редактировать"
        android:onClick="toEdit"
        app:layout_constraintTop_toBottomOf="@id/iv_profile"/>
    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:tint="@color/colorBlue"
        android:src="@drawable/ic_baseline_photo_camera_24"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_edit" />

    <TextView
        android:id="@+id/tv_stories"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingBottom="10dp"
        android:text="История"
        android:textColor="@color/colorBlue"
        android:textSize="12dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/iv_photo"
        app:layout_constraintBottom_toBottomOf="@id/sep1"
        app:layout_constraintRight_toLeftOf="@id/tv_post"
        app:layout_constraintLeft_toLeftOf="parent" />
    <ImageView
        android:id="@+id/iv_book"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:tint="@color/colorBlue"
        android:src="@drawable/ic_baseline_menu_book_24"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        app:layout_constraintLeft_toRightOf="@id/iv_photo"
        app:layout_constraintTop_toBottomOf="@+id/btn_edit"
        app:layout_constraintRight_toLeftOf="@+id/iv_picture"/>

    <ImageView
        android:id="@id/iv_picture"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:tint="@color/colorBlue"
        android:src="@drawable/ic_baseline_insert_photo_24"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_book"
        app:layout_constraintRight_toLeftOf="@id/iv_add"
        app:layout_constraintTop_toBottomOf="@id/btn_edit"/>
    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:tint="@color/colorBlue"
        android:src="@drawable/ic_baseline_add_box_24"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:layout_marginRight="1dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_picture"
        app:layout_constraintTop_toBottomOf="@id/btn_edit"/>
    <TextView
        android:id="@+id/tv_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="Запись"
        android:textColor="@color/colorBlue"
        android:paddingBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp"
        app:layout_constraintLeft_toRightOf="@id/tv_stories"
        app:layout_constraintTop_toBottomOf="@id/iv_book"
        app:layout_constraintRight_toLeftOf="@id/tv_photo"/>
    <TextView
        android:id="@+id/tv_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="Фото"
        android:textColor="@color/colorBlue"
        android:paddingBottom="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/tv_post"
        app:layout_constraintTop_toBottomOf="@id/iv_picture"
        app:layout_constraintRight_toLeftOf="@id/tv_clip"/>
    <TextView
        android:id="@+id/tv_clip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="Клип"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/colorBlue"
        android:paddingBottom="10dp"
        app:layout_constraintLeft_toRightOf="@id/tv_photo"
        app:layout_constraintTop_toBottomOf="@id/iv_add"
        app:layout_constraintRight_toRightOf="parent"/>
    <View
        android:id="@+id/sep1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray"
        android:layout_marginTop="85dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_edit"/>
    <ImageView
        android:id="@+id/iv_friends_list"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:tint="@color/colorGray"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_baseline_list_friends"
        app:layout_constraintTop_toBottomOf="@id/sep1"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
        android:id="@+id/iv_hometown"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:scaleType="centerCrop"
        android:tint="@color/colorGray"
        android:src="@drawable/ic_baseline_home"
        app:layout_constraintTop_toBottomOf="@id/iv_friends_list"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
        android:id="@+id/iv_school"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:scaleType="centerCrop"
        android:tint="@color/colorBlue"
        app:layout_constraintTop_toBottomOf="@id/iv_hometown"
        android:src="@drawable/ic_baseline_school"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
        android:id="@+id/iv_work"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:scaleType="centerCrop"
        android:tint="@color/colorBlue"
        android:src="@drawable/ic_baseline_work"
        app:layout_constraintTop_toBottomOf="@id/iv_school"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
        android:id="@+id/iv_info"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:scaleType="centerCrop"
        android:tint="@color/colorBlue"
        android:src="@drawable/ic_baseline_info"
        app:layout_constraintTop_toBottomOf="@id/iv_work"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingTop="22dp"
        android:text="99 друзей"
        android:textColor="@color/colorGray"
        android:textSize="15dp"
        app:layout_constraintLeft_toRightOf="@id/iv_friends_list"
        app:layout_constraintTop_toBottomOf="@id/sep1" />

    <TextView
        android:id="@+id/tv_hometown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:text="Город: Набережные Челны"
        android:textColor="@color/colorGray"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@id/tv_school"

        app:layout_constraintLeft_toRightOf="@id/iv_hometown"
        app:layout_constraintTop_toBottomOf="@id/tv_friends"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:text="Укажите место учебы"
        android:textColor="@color/colorBlue"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@id/tv_work"
        app:layout_constraintLeft_toRightOf="@id/iv_school"
        app:layout_constraintTop_toBottomOf="@id/tv_hometown"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingTop="16dp"
        android:text="Укажите место работы"
        android:textColor="@color/colorBlue"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@id/tv_info"
        app:layout_constraintLeft_toRightOf="@id/iv_work"
        app:layout_constraintTop_toBottomOf="@id/tv_school"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingTop="15dp"
        android:text="Подробная информация"
        android:textColor="@color/colorBlue"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@id/sep2"
        app:layout_constraintLeft_toRightOf="@id/iv_info" />

    <View
        android:id="@+id/sep2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorGray"
        app:layout_constraintTop_toBottomOf="@+id/tv_info" />
    <TextView
        android:id="@+id/tv_photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="ФОТОГРАФИИ"
        android:textColor="@color/colorWhite"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sep2"/>

    <ImageView
        android:id="@+id/iv_pic_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:scaleType="center"
        android:src="@mipmap/ic_pic_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_photos" />
    <ImageView
        android:id="@+id/iv_pic_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:scaleType="center"
        android:src="@mipmap/ic_pic_2"
        app:layout_constraintLeft_toRightOf="@id/iv_pic_1"
        app:layout_constraintTop_toBottomOf="@id/tv_photos" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:scaleType="center"
        android:src="@mipmap/ic_pic_3"
        app:layout_constraintLeft_toRightOf="@id/iv_pic_2"
        app:layout_constraintTop_toBottomOf="@id/tv_photos"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@id/iv_profile"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/my_switcher"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textColor="@color/colorWhite"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:textColor="@color/colorWhite"
                android:textSize="15sp" />
        </ViewSwitcher>
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        android:src="@mipmap/ic_profile_pic_round"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:text="@string/about"
        android:textColor="@color/colorBlue"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/tv_status"
        app:layout_constraintLeft_toRightOf="@id/iv_profile"
        app:layout_constraintTop_toBottomOf="@id/layout" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/online"
        android:textColor="@color/colorGray"
        android:textSize="12sp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@id/iv_profile"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_about" />

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:onClick="toEdit"
        android:text="@string/edit"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@id/iv_profile" />

    <LinearLayout
        android:id="@+id/layout_icons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btn_edit"
        android:weightSum="100"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/tv_stories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="@string/story"
            android:layout_weight="20"
            android:gravity="center"
            android:drawableTop="@drawable/ic_baseline_photo_camera_24"
            android:textColor="@color/colorBlue"
            android:drawableTint="@color/colorBlue"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/sep1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_post" />

        <TextView
            android:id="@+id/tv_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="@string/post"
            android:layout_weight="20"
            android:gravity="center"
            android:textColor="@color/colorBlue"
            android:drawableTint="@color/colorBlue"
            android:drawableTop="@drawable/pen"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/tv_stories"
            app:layout_constraintRight_toLeftOf="@id/tv_photo" />

        <TextView
            android:id="@+id/tv_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:drawableTint="@color/colorBlue"
            android:drawableTop="@drawable/ic_baseline_insert_photo_24"
            android:text="@string/photo"
            android:textColor="@color/colorBlue"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/tv_post"
            app:layout_constraintRight_toLeftOf="@id/tv_clip" />

        <TextView
            android:id="@+id/tv_clip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:drawableTop="@drawable/clip"
            android:drawableTint="@color/colorBlue"
            android:text="@string/clip"
            android:textColor="@color/colorBlue"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/tv_photo"
            app:layout_constraintRight_toRightOf="parent" />

    </LinearLayout>
    <View
        android:id="@+id/sep1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray"
        app:layout_constraintTop_toBottomOf="@+id/layout_icons" />

    <ImageView
        android:id="@+id/iv_friends_list"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_baseline_list_friends"
        android:tint="@color/colorGray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sep1" />

    <ImageView
        android:id="@+id/iv_hometown"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_baseline_home"
        android:tint="@color/colorGray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_friends_list" />

    <ImageView
        android:id="@+id/iv_school"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_baseline_school"
        android:tint="@color/colorBlue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_hometown" />

    <ImageView
        android:id="@+id/iv_work"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_baseline_work"
        android:tint="@color/colorBlue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_school" />

    <ImageView
        android:id="@+id/iv_info"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_baseline_info"
        android:tint="@color/colorBlue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_work" />

    <TextView
        android:id="@+id/tv_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="4dp"
        android:paddingTop="16dp"
        android:text="99 друзей"
        android:textColor="@color/colorGray"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/iv_friends_list"
        app:layout_constraintTop_toBottomOf="@id/sep1" />

    <TextView
        android:id="@+id/tv_hometown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="4dp"
        android:paddingTop="12dp"
        android:text="Город: Набережные Челны"
        android:textColor="@color/colorGray"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/tv_school"

        app:layout_constraintLeft_toRightOf="@id/iv_hometown"
        app:layout_constraintTop_toBottomOf="@id/tv_friends"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingStart="4dp"
        android:paddingTop="12dp"
        android:text="Укажите место учебы"
        android:textColor="@color/colorBlue"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/tv_work"
        app:layout_constraintLeft_toRightOf="@id/iv_school"
        app:layout_constraintTop_toBottomOf="@id/tv_hometown"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="4dp"
        android:paddingTop="16dp"
        android:text="Укажите место работы"
        android:textColor="@color/colorBlue"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/tv_info"
        app:layout_constraintLeft_toRightOf="@id/iv_work"
        app:layout_constraintTop_toBottomOf="@id/tv_school"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="4dp"
        android:paddingTop="16dp"
        android:text="Подробная информация"
        android:textColor="@color/colorBlue"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/sep2"
        app:layout_constraintLeft_toRightOf="@id/iv_info" />

    <View
        android:id="@+id/sep2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorGray"
        app:layout_constraintTop_toBottomOf="@+id/tv_info" />

    <TextView
        android:id="@+id/tv_photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="4dp"
        android:text="@string/photos"
        android:textColor="@color/colorWhite"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sep2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_photos">

        <ImageView
            android:id="@+id/iv_pic_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:scaleType="center"
            android:src="@mipmap/ic_pic_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_photos" />

        <ImageView
            android:id="@+id/iv_pic_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:scaleType="center"
            android:src="@mipmap/ic_pic_2"
            app:layout_constraintLeft_toRightOf="@id/iv_pic_1"
            app:layout_constraintTop_toBottomOf="@id/tv_photos" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:scaleType="center"
            android:src="@mipmap/ic_pic_3"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toRightOf="@id/iv_pic_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_photos" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>